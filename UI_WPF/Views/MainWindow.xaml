<Window x:Class="UI_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="{Binding Title}" 
                   FontSize="30" 
                   Foreground="White"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <!-- Cuerpo -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="320">

            <TextBlock Text="Dimensiones del tanque (in)" 
                       FontSize="18" 
                       Foreground="LightGray" 
                       Margin="0,0,0,20" 
                       TextAlignment="Center"/>

            <!-- Ancho -->
            <TextBlock Text="Ancho (in)" Foreground="White"/>
            <TextBox Text="{Binding Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,2,0,10" FontSize="14"/>

            <!-- Altura -->
            <TextBlock Text="Altura (in)" Foreground="White"/>
            <TextBox Text="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,2,0,10" FontSize="14"/>

            <!-- Fondo -->
            <TextBlock Text="Fondo (in)" Foreground="White"/>
            <TextBox Text="{Binding Depth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,2,0,10" FontSize="14"/>

            <!-- Espesor -->
            <TextBlock Text="Espesor de chapa (in)" Foreground="White"/>
            <TextBox Text="{Binding Thickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,2,0,25" FontSize="14"/>

            <Button Content="Generar tanque" 
                    Height="38"
                    Background="#007ACC" 
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding GenerateTankCommand}"/>

        </StackPanel>
    </Grid>
</Window>
