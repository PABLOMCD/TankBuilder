
<Window x:Class="UI_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:UI_WPF.Behaviors"
        xmlns:glb="clr-namespace:System.Globalization;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="640" Width="720"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <!-- Para ocultar/mostrar el checkbox según IsBackWallTop -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="{Binding Title}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Cuerpo principal -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="520"
                    Orientation="Vertical">

            <!-- Selección de segmento -->
            <TextBlock Text="Segmento a modificar"
                       FontSize="16" FontWeight="SemiBold" Foreground="Black"
                       Margin="0,0,0,10" TextAlignment="Center"/>

            <ComboBox ItemsSource="{Binding SegmentOptions}"
                      SelectedItem="{Binding SelectedSegmentKey}"
                      Margin="0,0,0,8" FontSize="14" MinHeight="28" Width="220"
                      HorizontalAlignment="Center"/>

            <!-- Rutas (origen/destino) -->
            <Grid Margin="0,12,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Origen (.ipt):" VerticalAlignment="Center" Foreground="Gray" />
                <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding PartPath, Mode=OneWay}"
                           IsReadOnly="True" FontSize="12" Margin="6,0,0,0"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Destino (.ipt):" VerticalAlignment="Center" Foreground="Gray" />
                <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding OutputPath, Mode=OneWay}"
                           IsReadOnly="True" FontSize="12" Margin="6,4,0,0"/>
            </Grid>

            <Separator Margin="0,0,0,12"/>

            <TextBlock Text="Dimensiones (en pulgadas, in)"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="Black" Margin="0,0,0,12"
                       TextAlignment="Center"/>

            <!-- ANCHO -->
            <TextBlock Text="Ancho (ANCHO) [in]" Foreground="Black"/>
            <TextBox
                behaviors:NumericDotInput.IsEnabled="True"
                Text="{Binding alto, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                               ConverterCulture={x:Static glb:CultureInfo.InvariantCulture}}"
                Margin="0,2,0,10" FontSize="14"/>

            <!-- LARGO -->
            <TextBlock Text="Largo (LARGO) [in]" Foreground="Black"/>
            <TextBox
                behaviors:NumericDotInput.IsEnabled="True"
                Text="{Binding HeightIn, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                               ConverterCulture={x:Static glb:CultureInfo.InvariantCulture}}"
                Margin="0,2,0,10" FontSize="14"/>

            <!-- LARGOF -->
            <TextBlock Text="Largo de pestaña (LARGOF) [in]" Foreground="Black"/>
            <TextBox
                behaviors:NumericDotInput.IsEnabled="True"
                Text="{Binding FlangeIn, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                               ConverterCulture={x:Static glb:CultureInfo.InvariantCulture}}"
                Margin="0,2,0,16" FontSize="14"/>

            <!-- ✅ Apariencia: solo BackWallTop -->
            <Separator Margin="0,0,0,12"/>
            <TextBlock Text="Apariencia (solo BackWallTop)"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="Black" Margin="0,0,0,8"
                       TextAlignment="Center"
                       Visibility="{Binding IsBackWallTop, Converter={StaticResource BoolToVis}}"/>
            <CheckBox Content="Aplicar color verde (SSTL)"
                      IsChecked="{Binding ApplyGreen}"
                      HorizontalAlignment="Center"
                      Visibility="{Binding IsBackWallTop, Converter={StaticResource BoolToVis}}"
                      Margin="0,0,0,12"/>

            <!-- Botón principal -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Modificar y guardar en carpeta destino"
                        Command="{Binding ModifyCommand}"
                        Width="280" Height="36"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>

            <TextBlock Text="Se aplicarán ANCHO, LARGO y LARGOF (in) a la pieza del segmento seleccionado. Si está activo el checkbox (y el segmento es BackWallTop), se aplicará la apariencia Verde (SSTL)."
                       Foreground="Gray" FontSize="12"
                       Margin="0,12,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
