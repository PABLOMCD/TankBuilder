<Window x:Class="UI_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:UI_WPF.Behaviors"
        xmlns:glb="clr-namespace:System.Globalization;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="470" Width="640"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="{Binding Title}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Cuerpo principal -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="420"
                    Orientation="Vertical">

            <!-- Selección de pieza -->
            <TextBlock Text="Pieza de Sheet Metal a modificar (.ipt)"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       Margin="0,0,0,10"
                       TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <TextBox Text="{Binding PartPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="300"
                         IsReadOnly="True"
                         Margin="0,0,8,0"
                         ToolTip="Ruta de la pieza Inventor (.ipt) a modificar"/>
                <Button Content="Seleccionar pieza…"
                        Command="{Binding BrowsePartCommand}"
                        Width="140"
                        Height="28"
                        Cursor="Hand"/>
            </StackPanel>

            <Separator Margin="0,0,0,12"/>

            <TextBlock Text="Dimensiones (en pulgadas, in)"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       Margin="0,0,0,12"
                       TextAlignment="Center"/>

            <!-- ANCHO -->
            <TextBlock Text="Ancho (ANCHO) [in]" Foreground="Black"/>
            <TextBox
                behaviors:NumericDotInput.IsEnabled="True"
                Text="{Binding WidthIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                               ConverterCulture={x:Static glb:CultureInfo.InvariantCulture}}"
                Margin="0,2,0,10" FontSize="14"/>

            <!-- LARGO -->
            <TextBlock Text="Largo (LARGO) [in]" Foreground="Black"/>
            <TextBox
                behaviors:NumericDotInput.IsEnabled="True"
                Text="{Binding HeightIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                               ConverterCulture={x:Static glb:CultureInfo.InvariantCulture}}"
                Margin="0,2,0,10" FontSize="14"/>

            <!-- LARGOF = pestaña/flange -->
            <TextBlock Text="Largo de pestaña (LARGOF) [in]" Foreground="Black"/>
            <TextBox
                behaviors:NumericDotInput.IsEnabled="True"
                Text="{Binding FlangeIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                               ConverterCulture={x:Static glb:CultureInfo.InvariantCulture}}"
                Margin="0,2,0,16" FontSize="14"/>

            <!-- Botón principal -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Modificar pieza"
                        Command="{Binding GenerateSheetCommand}"
                        Width="180" Height="36"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>

            <TextBlock Text="Los parámetros ANCHO, LARGO y LARGOF se escribirán directamente en la pieza seleccionada (.ipt)."
                       Foreground="Gray"
                       FontSize="12"
                       Margin="0,12,0,0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
