<Window x:Class="UI_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="460" Width="620"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="{Binding Title}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Cuerpo principal -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="340">

            <TextBlock Text="Dimensiones de la lámina (in)"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

            <!-- Ancho -->
            <TextBlock Text="Ancho (in)" Foreground="Black"/>
            <TextBox Text="{Binding WidthIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,2,0,10" FontSize="14"/>

            <!-- Altura -->
            <TextBlock Text="Altura (in)" Foreground="Black"/>
            <TextBox Text="{Binding HeightIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,2,0,20" FontSize="14"/>

            <!-- Estilo de chapa -->
            <TextBlock Text="Estilo de chapa" Foreground="Black"/>
            <ComboBox ItemsSource="{Binding SheetStyles}"
                      SelectedItem="{Binding SelectedStyle}"
                      Margin="0,2,0,12"
                      FontSize="14"
                      MinHeight="26"/>

            <!-- Regla de desplegado -->
            <TextBlock Text="Regla de desplegado" Foreground="Black"/>
            <ComboBox ItemsSource="{Binding UnfoldRules}"
                      SelectedItem="{Binding SelectedRule}"
                      Margin="0,2,0,20"
                      FontSize="14"
                      MinHeight="26"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Actualizar listas"
                        Command="{Binding RefreshListsCommand}"
                        Width="140" Height="32"
                        Margin="0,0,10,0"/>
                <Button Content="Generar lámina"
                        Command="{Binding GenerateSheetCommand}"
                        Width="140" Height="32"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Info de salida -->
            <TextBlock Text="Salida: C:\Temp\TankBuilder_SheetBase.ipt"
                       Foreground="Gray"
                       FontSize="12"
                       Margin="0,20,0,0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
